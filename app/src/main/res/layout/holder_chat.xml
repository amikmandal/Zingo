<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout_chat"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/profile_photo_sender"
        android:layout_below="@+id/sender_date"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="10 April"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_text"
        android:orientation="vertical"
        android:layout_below="@id/sender_date"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/profile_photo_sender"
        android:layout_toEndOf="@+id/profile_photo_sender"
        >

    </LinearLayout>

</RelativeLayout>
